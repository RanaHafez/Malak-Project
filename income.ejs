<div class="cards-container">
  <% sections.forEach((section) => { %>
  <div class="card">
    <div class="face face1">
      <div class="content">
        <!-- Replace with your icon/image path -->
        <img src="<%= section.icon %>" alt="<%= section.title %> icon" />
        <h3><%= section.title %></h3>
      </div>
    </div>
    <div class="face face2">
      <div class="content">
        <p><%= section.text %></p>
        <!-- Removed the <a> tag as requested -->
      </div>
    </div>
  </div>
  <% }); %>
</div>
